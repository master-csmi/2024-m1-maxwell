{
    "Name":"Maxwell_Particle",
    "ShortName":"maxwell_particle",
    "Models":
    {
        "cfpdes":{
            "equations":["equation1","equation2","equation3"]
        },
        "equation1":{
            "setup":{
                "unknown":{
                    "basis":"Pch1",
                    "name":"Hx",
                    "symbol":"Hx"
                },
                "coefficients":{
                    "d":"materials_epsilon:materials_epsilon",
                    "gamma":"{0,equation3_Ez}:equation3_Ez"
                }
            }
        },
        "equation2":{
            "setup":{
                "unknown":{
                    "basis":"Pch1",
                    "name":"Hy",
                    "symbol":"Hy"
                },
                "coefficients":{
                    "d":"materials_epsilon:materials_epsilon",
                    "gamma":"{-equation3_Ez,0}:equation3_Ez"
                }
            }
        },
        "equation3":{
            "setup":{
                "unknown":{
                    "basis":"Pch1",
                    "name":"Ez",
                    "symbol":"Ez"
                },
                "coefficients":{
                    "d":"materials_mu:materials_mu",
                    "gamma":"{-equation2_Hy,equation1_Hx}:equation2_Hy:equation1_Hx"
                }
            }
        }
    },

    "Parameters":{
        "c":3e8,
        "T":20
    },

    "Meshes":
    {
        "cfpdes":
        {
            "Import":
            {
                "filename":"$cfgdir/particle.geo",
                "hsize":0.01
            }
        }
    },

    "Materials":
    {
        "mymat1":{
            "markers":"Screen",
            "epsilon":"1",
            "mu":"1"
        },
        "mymat2":{
            "markers":"Particle",
            "epsilon":"2",
            "mu":"2"
        }
    },

    "BoundaryConditions":
    {
        "equation1":
        {
            "Dirichlet":
            {
                "mybc2":{
                    "markers":["Bottom_1","Bottom_2","Bottom_3"],
                    "expr":"100*sin(T*t):t:T"
                },
                "mybc3":{
                    "markers":["Top","Right","Left"],
                    "expr":"0"
                }
            }
        },

        "equation2":
        {
            "Dirichlet":
            {
                "mybc2":{
                    "markers":["Bottom_1","Bottom_2","Bottom_3"],
                    "expr":"100*sin(T*t):t:T"
                },
                "mybc3":{
                    "markers":["Top","Right","Left"],
                    "expr":"0"
                }
            }
        },

        "equation3":
        {
            "Dirichlet":
            {
                "mybc2":{
                    "markers":["Bottom_1","Bottom_2","Bottom_3"],
                    "expr":"100*sin(T*t):t:T"
                },
                "mybc3":{
                    "markers":["Top","Right","Left"],
                    "expr":"0"
                }
            }
        }        
    },

    "InitialConditions":
    {
        "equation1":{
            "Hx":{
                "Expression":{
                    "myic1":{
                        "markers":["Screen","Particle"],
                        "expr":"0"
                    }
                }
            }
        },

        "equation2":{
            "Hy":{
                "Expression":{
                    "myic1":{
                        "markers":["Screen","Particle"],
                        "expr":"0"
                    }
                }
            }
        },

        "equation3":{
            "Ez":{
                "Expression":{
                    "myic1":{
                        "markers":["Screen","Particle"],
                        "expr":"0"
                    }
                }
            }
        }
    },

    "PostProcess":
    {
        "cfpdes":
        {
            "Exports":
            {
                "fields":["all"]
            },
            "Measures":{
                "Points":{
                    "capteur_sortie":{
                        "over_geometry":{
                            "segment":{
                                "point1":"{-0.8,1.5,0}",
                                "point2":"{0.8,1.5,0}",
                                "n_points":100
                            }
                        },
                        "fields":"cfpdes",
                        "include_coordinates":1,
                        "expressions":{
                            "L2s":"equation1_Hx*equation1_Hx+equation3_Ez*equation3_Ez:equation1_Hx:equation2_Hy:equation3_Ez"
                        },
                        "output":{
                            "type":"table",
                            "name":"sortie"
                        }
                    },
                    "capteur_entree":{
                        "over_geometry":{
                            "segment":{
                                "point1":"{-0.8,0.1,0}",
                                "point2":"{0.8,0.1,0}",
                                "n_points":100
                            }
                        },
                        "fields":"cfpdes",
                        "include_coordinates":1,
                        "expressions":{
                            "L2e":"equation1_Hx*equation1_Hx+equation3_Ez*equation3_Ez:equation1_Hx:equation2_Hy:equation3_Ez"
                        },
                        "output":{
                            "type":"table",
                            "name":"entree"
                        }
                    }
                }
            }
        }
    }

    

}
